# Polymarket Paired Strategy Configuration
# Copy this file to .env and fill in your values

# Your wallet private key (controls your Polymarket account)
# Export from reveal.polymarket.com or your Web3 wallet
PRIVATE_KEY=your_private_key_here

# Your Polymarket proxy/funder address (where your USDC is held)
# Find this in your Polymarket profile dropdown
MY_ADDRESS=0x370e81c93aa113274321339e69049187cce03bb9

# Signature type: 0=EOA, 1=Email/Magic, 2=Browser wallet (Gnosis Safe)
SIGNATURE_TYPE=1

# Redis connection string (required)
# Railway provides REDIS_URL / REDIS_PRIVATE_URL automatically when linked to Redis service
REDIS_URL=redis://localhost:6379

# Polymarket Builder API (required for claiming winnings from proxy wallet)
# Create at polymarket.com → profile → API keys
POLY_BUILDER_API_KEY=your_builder_api_key_here
POLY_BUILDER_SECRET=your_builder_secret_here
POLY_BUILDER_PASSPHRASE=your_builder_passphrase_here

# Secures /api/copy-trade endpoint (required for worker requests)
CRON_SECRET=replace_with_random_secret

# Persistent worker settings
# If using a separate worker service, point this to your web app base URL
APP_BASE_URL=https://your-app-domain.com
WORKER_INTERVAL_MS=15000
WORKER_REQUEST_TIMEOUT_MS=70000

# Optional alert webhook for critical safety events (daily cap hits, latch active, breaker trips)
ALERT_WEBHOOK_URL=
# Optional bearer token sent as Authorization header to ALERT_WEBHOOK_URL
ALERT_WEBHOOK_TOKEN=
